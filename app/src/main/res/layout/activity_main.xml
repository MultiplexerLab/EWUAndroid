<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageViewUser"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/user_icon"
        android:layout_margin="10dp"/>

    <EditText
        android:id="@+id/editTextUseraName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imageViewUser"
        android:layout_alignBottom="@+id/imageViewUser"
        android:hint="Insert UserName"/>

    <ImageView
        android:id="@+id/imageViewPassword"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/imageViewUser"
        android:layout_margin="10dp"/>

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_toRightOf="@+id/imageViewPassword"
        android:layout_alignBottom="@+id/imageViewPassword"
        android:hint="Insert Password"/>

    <ImageView
        android:id="@+id/imageViewEmail"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/imageViewPassword"
        android:layout_margin="10dp"
        android:src="@drawable/email_icon"/>

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imageViewEmail"
        android:layout_alignBottom="@+id/imageViewEmail"
        android:hint="Insert CGPA"/>

    <ImageView
        android:id="@+id/imageViewPhoneNo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/imageViewEmail"
        android:layout_margin="10dp" />
    <EditText
        android:id="@+id/editTextPhoneNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imageViewPhoneNo"
        android:layout_alignBottom="@+id/imageViewPhoneNo"
        android:hint="Insert Phone No"/>

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewPhoneNo"
        android:text="Save"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:onClick="saveData"/>

    <ListView
        android:id="@+id/listViewStudents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonSave"
        android:layout_margin="10dp"></ListView>



</RelativeLayout>
